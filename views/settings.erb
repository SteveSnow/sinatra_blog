<div class="container">

	<h1>Update Your Profile</h1>
<div class="edit-profile">
	<form method="POST" action="/settings">		
		<div class="form-group">
			<label for="fname">First Name:</label><br>
			<input type="text" name="fname" value="<%= @user.fname %>" class="form-control">
		</div>	
		<div class="form-group">
			<label for="lname">Last Name:</label><br>
			<input type="text" name="lname" value="<%= @user.lname %>" class="form-control">
		</div>	
		<div class="form-group">	
			<label for="password">Password:</label><br>
			<input type="password" name="password" value="<%= @user.password %>" class="form-control">
		</div>	
		<div class="form-group">
			<label for="email">Email:</label><br>		
			<input type="text" name="email" value="<%= @user.email %>" class="form-control">
		</div>	
		<input type="hidden" name="user_id" value="<%= current_user.id %>"><br>
		<button type="submit" class="btn btn-primary">Edit Profile</button>
	</form>
</div>

	<h1>Delete your profile</h1>

	<form method="POST" enctype="multipart/form-data" action="/delete-profile">
		<p>Deleting your profile is irreversible. Please type your password to delete your profile.</p>
		<div class="form-group">	
			<label for="password">Password</label>
			<input type="password" name="password" value="" class="form-control">
		</div>	
		<input type="hidden" name="user_id" value="<%= @user.id %>">
		<button type="submit" class="btn btn-danger">Delete Profile</button>
	</form>





</div>